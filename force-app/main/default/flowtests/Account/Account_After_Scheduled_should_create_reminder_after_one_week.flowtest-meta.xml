<?xml version="1.0" encoding="UTF-8"?>
<FlowTest xmlns="http://soap.sforce.com/2006/04/metadata">
    <flowApiName>Account_After</flowApiName>
    <label>Scheduled - should create reminder after one week</label>
    <testPoints>
        <elementApiName>Start</elementApiName>
        <parameters>
            <leftValueReference>$Record</leftValueReference>
            <type>InputTriggeringRecordInitial</type>
            <value>
                <sobjectValue>{&quot;Name&quot;:&quot;Any Name&quot;}</sobjectValue>
            </value>
        </parameters>
        <parameters>
            <leftValueReference>ScheduledPathApiName</leftValueReference>
            <type>ScheduledPath</type>
            <value>
                <stringValue>After_one_week</stringValue>
            </value>
        </parameters>
    </testPoints>
    <testPoints>
        <assertions>
            <conditions>
                <leftValueReference>Was_KRS_checked</leftValueReference>
                <operator>WasVisited</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
        </assertions>
        <assertions>
            <conditions>
                <leftValueReference>Create_KRS_check_Tasks</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <stringValue></stringValue>
                </rightValue>
            </conditions>
        </assertions>
        <elementApiName>Finish</elementApiName>
    </testPoints>
</FlowTest>
