<?xml version="1.0" encoding="UTF-8"?>
<FlowTest xmlns="http://soap.sforce.com/2006/04/metadata">
    <flowApiName>Account_Before</flowApiName>
    <label>Should set Rating from Parent</label>
    <testPoints>
        <elementApiName>Start</elementApiName>
        <parameters>
            <leftValueReference>$Record</leftValueReference>
            <type>InputTriggeringRecordInitial</type>
            <value>
                <sobjectValue>{&quot;Name&quot;:&quot;Child Account&quot;,&quot;OwnerId&quot;:&quot;005WU00000Cmg7hYAB&quot;,&quot;ParentId&quot;:&quot;001WU00001IjeXuYAJ&quot;}</sobjectValue>
            </value>
        </parameters>
    </testPoints>
    <testPoints>
        <assertions>
            <conditions>
                <leftValueReference>$Record.Rating</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Warm</stringValue>
                </rightValue>
            </conditions>
            <errorMessage>Account Rating was set incorrectly</errorMessage>
        </assertions>
        <assertions>
            <conditions>
                <leftValueReference>Set_Rating_from_Parent</leftValueReference>
                <operator>WasVisited</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <errorMessage>Expected block was not visited: Set_Rating_from_Parent</errorMessage>
        </assertions>
        <elementApiName>Finish</elementApiName>
    </testPoints>
</FlowTest>
